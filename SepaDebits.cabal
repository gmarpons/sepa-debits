                        cairo,
                        cassava                 >= 0.3,
                        classy-prelude          >= 0.8.0.1,
                        containers              >= 0.4.2.1,
                        conduit                 >= 1.0,
                        formatting              >= 3.1,
                        glib,
                        gtk3                    == 0.13.*,
                        iconv                   >= 0.4,
                        lens                    >= 4.0.5,
                        monad-control           >= 0.3,
                        mongoDB                 == 1.4.4.*,
                        network                 >= 2.4,
                        pango,
                        persistent              == 1.3.*,
                        persistent-mongoDB      == 1.3.*,
                        persistent-template     == 1.3.*,
                        resourcet               >= 0.4.10,
                        text                    >= 0.11,
                        text-icu                >= 0.6.3,
                        template-haskell        >= 2.7,
                        time                    >= 1.4,
                        transformers            >= 0.3,
                        xml                     >= 1.3.13,
                        xml-conduit             >= 1.1.0.9
  default-language:     Haskell2010
  other-extensions:     NoImplicitPrelude,
                        TemplateHaskell
  ghc-options:          -threaded

