library
  exposed-modules:      Sepa.BillingConcept,
                        Sepa.Controller.BillingConcept,
                        Sepa.Controller.Class,
                        Sepa.Controller.Debtor,
                        Sepa.Controller.TreeView,
                        Sepa.Creditor,
